@model LoginViewModel
<div class="col-md-6 offset-md-3">
    <div id="loginForm">
        @if (Model.EnableLocalLogin)
        {
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="card">

                        <div class="card-body">
                            <div class="intro">
                                <h2 aria-level="1">
                                    Sign in with your company account
                                </h2>
                            </div>
                            <form asp-route="Login">
                                <input type="hidden" asp-for="ReturnUrl" />

                                <div class="form-group">
                                    <label asp-for="Username"></label>
                                    <input placeholder="Username" asp-for="Username" autofocus>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password"></label>
                                    <input type="password" placeholder="Password" asp-for="Password" autocomplete="off">
                                </div>
                                @if (Model.AllowRememberLogin)
                                {
                                    <div class="form-group">
                                        <div class="form-check">
                                            <input class="form-check-input" asp-for="RememberLogin">
                                            <label class="form-check-label" asp-for="RememberLogin">
                                                Remember My Login
                                            </label>
                                        </div>
                                    </div>
                                }
                                <div class="buttons">
                                    <button class="btn btn-primary" name="button" value="login">Login</button>
                                    @*<button class="btn btn-secondary fixed-width" name="button" value="cancel">Cancel</button>*@
                                </div>
                                @*<div class="form-group"><br/>
                                    <label>(Use 'Password01' as password)</label>
                                </div>*@
                            </form>
                        </div>
                    </div>


                </div>
            </div>


        }

    </div>
</div>